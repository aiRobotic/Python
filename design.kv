#:kivy 1.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            Label:
                text:"User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols:2
            Button:
                text: "Forget Passowrd"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up for "
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<RootWidget>:
    LoginScreen:
        name: "Login_Screen"
    SignUpScreen:
        name : "Sign_Up_Screen"