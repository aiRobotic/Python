#:kivy 1.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            Label:
                text:"User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: incorrect_input
                text: " "
        GridLayout:
            cols:2
            Button:
                text: "Forget Passowrd"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up for "
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up SUCCESSFUL "
        Button:
            text: "Go to Login"
            on_press: root.go_to_login()

<LoginSuccess>
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.logout()
        Label:
            text: "How do you feel today?"
        TextInput:
            id: feeling
            hint_text: "Bored, Tired, Happy etc..."
        Button:
            text:"Inspire me"
            on_press: root.get_feeling(root.ids.feeling.text)
        Label:
            id: quote
            text: " "

<RootWidget>:
    LoginScreen:
        name: "Login_Screen"
    SignUpScreen:
        name : "Sign_Up_Screen"
    SignUpScreenSuccess:
        name : "Sign_Up_Screen_Success"
    LoginSuccess:
        name : "Login_Success"